<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-10 mb-5 ">
      <%= render "form" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= turbo_frame_tag "posts", class: "" do %>
        <% @posts.each do |post| %>
          <%= render partial: "post", locals: { post: post } %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
