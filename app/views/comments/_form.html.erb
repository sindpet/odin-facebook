<%= form_with model: [post, @comment],
    data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } do |form| %>
  <%= form.text_area :body, class: "form-control border border-secondary-subtle", placeholder: "Comment something..." %>

  <%= form.submit "Add comment", class: "btn btn-primary float-end" %>
<% end %>
